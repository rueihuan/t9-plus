{
  "compilerOptions": {
    "alwaysStrict": true,
    "strict": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "target": "es2015",
    "baseUrl": "./src",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist"
  },
  "include": ["src/index.ts"]
}